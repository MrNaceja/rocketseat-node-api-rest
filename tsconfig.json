{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 24",
  "_version": "24.0.0",
  "compilerOptions": {
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    "module": "nodenext",
    "target": "es2024",
    "verbatimModuleSyntax": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@common/*": [
        "common/*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "./src"
  ]
}